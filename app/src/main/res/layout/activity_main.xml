<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/main_menu_bar">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4d4032"
        android:gravity="center_vertical">

        <ImageButton
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:id="@+id/settings"
            android:src="@drawable/settings"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="10dp"
            android:visibility="gone" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="SmartMaidDemo"
            android:id="@+id/textView2"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:gravity="left|center_vertical"
            android:layout_marginLeft="10dp"
            android:textColor="#d4bca2" />

        <ImageButton
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:id="@+id/imageButton2"
            android:src="@drawable/show"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="40dp"
            android:visibility="gone" />

        <ImageButton
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:id="@+id/imageButton3"
            android:src="@drawable/mute"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:layout_below="@+id/hide_rooms"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="40dp"
            android:visibility="gone" />

        <ImageButton
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:id="@+id/imageButton4"
            android:src="@drawable/settings"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="80dp"
            android:visibility="gone" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/image_wifi"
            android:src="@drawable/wifi_off"
            android:scaleType="fitCenter"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="10dp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/image_plug"
            android:src="@drawable/power_off"
            android:scaleType="fitCenter"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="10dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4d4032">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="22dp"
            android:background="#d4bca2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Room"
                android:id="@+id/left_rooms"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="22dp"
            android:background="#d4bca2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Room"
                android:id="@+id/right_rooms"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4d4032">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="22dp"
            android:background="#d4bca2">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="22dp"
            android:background="#d4bca2">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4d4032">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="22dp"
            android:background="#d4bca2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Room"
                android:id="@+id/rooms_l"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray" />

            <com.isosystems.smartmaid.utils.FlipMenuButton
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:id="@+id/left_dnd_flip"
                android:src="@drawable/dnd"
                android:scaleType="fitCenter"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@android:color/transparent" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray" />

            <com.isosystems.smartmaid.utils.FlipMenuButton
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:id="@+id/left_maid_flip"
                android:src="@drawable/maid"
                android:scaleType="fitCenter"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@android:color/transparent" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray" />

            <com.isosystems.smartmaid.utils.FlipMenuButton
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:id="@+id/left_clean_flip"
                android:src="@drawable/clean"
                android:scaleType="fitCenter"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@android:color/transparent" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray" />

            <com.isosystems.smartmaid.utils.FlipMenuButton
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:id="@+id/left_wash_flip"
                android:src="@drawable/wash"
                android:scaleType="fitCenter"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@android:color/transparent" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray" />

            <com.isosystems.smartmaid.utils.FlipMenuButton
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:id="@+id/left_minibar_flip"
                android:src="@drawable/minibar"
                android:scaleType="fitCenter"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@android:color/transparent" />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="22dp"
            android:background="#d4bca2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Room"
                android:id="@+id/rooms_r"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray" />

            <com.isosystems.smartmaid.utils.FlipMenuButton
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:id="@+id/right_dnd_flip"
                android:src="@drawable/dnd"
                android:scaleType="fitCenter"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@android:color/transparent" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray" />

            <com.isosystems.smartmaid.utils.FlipMenuButton
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:id="@+id/right_maid_flip"
                android:src="@drawable/maid"
                android:scaleType="fitCenter"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@android:color/transparent" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray" />

            <com.isosystems.smartmaid.utils.FlipMenuButton
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:id="@+id/right_clean_flip"
                android:src="@drawable/clean"
                android:scaleType="fitCenter"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@android:color/transparent" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray" />

            <com.isosystems.smartmaid.utils.FlipMenuButton
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:id="@+id/right_wash_flip"
                android:src="@drawable/wash"
                android:scaleType="fitCenter"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@android:color/transparent" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray" />

            <com.isosystems.smartmaid.utils.FlipMenuButton
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:id="@+id/right_minibar_flip"
                android:src="@drawable/minibar"
                android:scaleType="fitCenter"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@android:color/transparent" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4d4032">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="22dp"
            android:background="#d4bca2">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="22dp"
            android:background="#d4bca2">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:id="@+id/list"
            android:smoothScrollbar="true"
            android:dividerHeight="1dp"
            android:drawSelectorOnTop="false"
            android:layout_weight="1"
            android:divider="@android:color/darker_gray"
            android:paddingBottom="3dp" />

        <RelativeLayout
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:background="#4d4032"
            android:gravity="top|center_horizontal">

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:id="@+id/hide_rooms"
                android:src="@drawable/show"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:layout_marginBottom="20dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:id="@+id/sound_button"
                android:src="@drawable/sound"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:layout_marginBottom="20dp"
                android:layout_below="@+id/hide_rooms"
                android:layout_centerHorizontal="true" />

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="68dp"
                android:id="@+id/settings_button"
                android:src="@drawable/settings"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:id="@+id/list_2"
            android:smoothScrollbar="true"
            android:dividerHeight="1dp"
            android:drawSelectorOnTop="false"
            android:layout_weight="1"
            android:divider="@android:color/darker_gray"
            android:paddingBottom="3dp" />
    </LinearLayout>

</LinearLayout>
